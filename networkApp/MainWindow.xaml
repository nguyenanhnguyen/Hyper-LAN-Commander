<Window x:Class="networkApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hyper-LAN Commander" Height="450" Width="400" Background="#F0F2F5">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="HYPER-LAN COMMANDER" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#1A73E8" Margin="0,0,0,20"/>

            <Border Background="White" CornerRadius="15" Padding="20" 
                    BorderBrush="#DADCE0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Địa chỉ IP của bạn:" FontSize="14" Foreground="#5F6368"/>
                    <TextBlock Name="txtIP" Text="Đang lấy IP..." FontSize="36" 
                               FontWeight="ExtraBold" HorizontalAlignment="Center" 
                               Foreground="#202124" Margin="0,10"/>
                    <TextBlock Name="txtStatus" Text="Trạng thái: Đang khởi tạo" 
                               FontSize="12" Foreground="#34A853" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Button Name="btnListen" Content="BẮT ĐẦU LẮNG NGHE" Height="50" Margin="0,30,0,0"
                    Background="#1A73E8" Foreground="White" FontWeight="Bold" 
                    FontSize="16" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>